{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    /* React/JSX Settings */
    "jsx": "react-jsx",
    "types": [
      "vite",
      "react"
    ],
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src",
    "vite.config.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}